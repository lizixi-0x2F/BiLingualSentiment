{
  "model": {
    "vocab_size": 250002,
    "hidden_size": 640,
    "num_hidden_layers": 12,
    "num_attention_heads": 10,
    "intermediate_size": 2560,
    "hidden_dropout_prob": 0.1,
    "attention_probs_dropout_prob": 0.1,
    "ltc_hidden_size": 128,
    "ltc_memory_size": 32,
    "ltc_num_layers": 2,
    "ltc_dropout": 0.1,
    "output_dim": 2,
    "max_sequence_length": 256,
    "use_rms_norm": true,
    "use_relative_position_encoding": true,
    "use_deep_reversible": true,
    "use_recomputation": true
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 5e-5,
    "warmup_ratio": 0.1,
    "weight_decay": 0.01,
    "max_epochs": 3,
    "early_stopping_patience": 2,
    "num_workers": 2,
    "seed": 42,
    "gradient_accumulation_steps": 1,
    "fp16": false
  },
  "regularization": {
    "use_fgm": true,
    "fgm_epsilon": 1e-3
  },
  "distillation": {
    "temperature": 2.0,
    "alpha": 0.5,
    "teacher_model_path": "checkpoints/teacher/best_model.pt",
    "soft_target_loss_weight": 0.6,
    "hard_target_loss_weight": 0.4,
    "target_efficiency": 0.95
  },
  "data": {
    "chinese_va_data_path": "data/Chinese_VA_dataset_gaussNoise.csv",
    "english_va_data_path": "data/emobank_va_normalized.csv",
    "max_length": 128,
    "val_ratio": 0.2,
    "test_ratio": 0.2
  },
  "output": {
    "save_dir": "checkpoints/student_medium",
    "log_dir": "logs/student_medium"
  }
} 